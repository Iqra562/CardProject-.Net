
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Admin.cshtml";
}
@model Product
<div class="col-12 col-md-12 col-lg-12">
    <div class="alert alert-light col-3 d-none" id="categoryAlert" role="alert">
        A simple primary alert—check it out!
    </div>

    <div class="card">
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="ml-4 mt-3">
                <h6>Add Product</h6>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <input type="text" class="form-control " placeholder="Enter product Name" asp-for="Name" value="" required="">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control " asp-for="Price" placeholder="Enter product price" value="" required="">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control " placeholder="Add product quantity" asp-for="Quantity" value="" required="">
                </div>

                <div class="form-group">
                   <label>Choose One</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.category" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label>Choose One</label>
                    <select asp-for="BrandId" asp-items="ViewBag.brand" class="form-control"></select>
                </div>
                <div class="form-group">
                    <input type="file" class="form-control " asp-for="Image" placeholder="Enter product price" value="" required="">
                </div>
                <h3>@ViewBag.message</h3>

                <button type="submit" class="btn btn-primary">Add</button>
            </div>

        </form>
        <div class="bg-red">@ViewBag.message </div>
    </div>
</div>

