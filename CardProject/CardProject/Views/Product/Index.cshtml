
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="col-12">

    <div class="card">
        <div class="d-flex ">
            <div class="card-header">
                <h4>Products</h4>
            </div>
            <div>
                <button class="btn btn-primary mt-3 mr-3"><a asp-action="Create" class="text-white">+ Add Product</a></button>

            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table  v_center" id="sortable-table">
                    <thead>
                        <tr>
                            <th class="">
                                #
                            </th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                          
                            <th>Category</th>
                            <th>Brand</th>
                            <th>Image</th>
                            <th>Edit</th>
                            <th>Delete</th>


                        </tr>
                    </thead>
                    <tbody class="ui-sortable">
                            @foreach(var item in Model)
                        {

                        <tr>

                        <td> @item.ProductId
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@item.Category.CategoryName</td>
                        <td>@item.Brand.BrandName</td>
                        <td><img src="~/images/@item.Image" width="100"/></td>
                         
                        <td><a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-primary">Edit</a>
                        </td><td><a href="#" class="btn btn-light ml-2">Delete</a></td>


                        </tr>
                        }
                       

                    </tbody>
                </table>
                @if (!string.IsNullOrEmpty(ViewBag.throwError))
                {

                    <div class="d-flex justify-content-center text-light  align-self-end m-5 p-5 bg-white" style="font-size:30px"><i class="fa fa-inbox " aria-hidden="true"></i><p>@ViewBag.throwError</p></div>

                }
            </div>
            </div>
        </div>
    </div>
</div>


