 
@model Category 
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Admin.cshtml";
}
<div class="col-12 col-md-12 col-lg-12">

    <div class="col-12 d-flex justify-content-center " style="position: relative; top:-60px">
    @if (!string.IsNullOrEmpty(ViewBag.message))
    {
        <div class="bg-white  d-flex p-2  shadow rounded" style="height:40px">
                <p>@ViewBag.message        <i class="fas fa-check-circle"></i></p>
        
            </div>

    }
    else
    {
        <div class="alert alert-light col-3 d-none" id="categoryAlert" role="alert"></div>
    }
    </div>
    <div class="card">
        <form method="post" asp-action="Create">
            <div class="ml-4 mt-3">
                <h6>Add Category</h6>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <input type="text" class="form-control " asp-for="CategoryName" value="" required="">
                <span class="text-danger">@ViewBag.exist</span>
                </div>

              
                <button class="btn btn-primary" >Add</button>
            </div>

        </form>
        <div class="bg-red"> </div>
    </div>
</div>
