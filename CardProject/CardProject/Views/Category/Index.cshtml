
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}
@model IEnumerable<Category>
<div class="col-12">
    
    <div class="card">
        <div class="d-flex ">
            <div class="card-header">
            <h4>Categories</h4>
        </div>
            <div >
                <button class="btn btnBg btn-primary mt-3 mr-3"><a asp-action="Create" class="text-white">+ Add Category</a></button>

            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table  v_center" id="sortable-table">
                    <thead>
                        <tr>
                            <th>
                      #
                            </th>
                            <th>Category Name</th>

                            <th>Edit</th>
                            <th>Delete</th>


                        </tr>
                    </thead>
                    <tbody class="ui-sortable">
                      @foreach(var category in Model)
                        {
                            
                        <tr>

                            <td> @category.CategoryId
                            </td>
                            <td>@category.CategoryName</td>
                         
                                <td>
                                    <a  class="btn btn-primary" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a>
                               </td><td><a href="#" class="btn btn-light ml-2" >Delete</a></td>


                        </tr>
                        }

                       
                       
                    </tbody>
                </table>
                @if (!string.IsNullOrEmpty(ViewBag.throwError))
                {

                    <div class="d-flex justify-content-center text-light  align-self-end m-5 p-5 bg-white" style="font-size:30px"><i class="fa fa-inbox " aria-hidden="true"></i><p>@ViewBag.throwError</p></div>

                }
            </div>
        </div>
    </div>
</div>
