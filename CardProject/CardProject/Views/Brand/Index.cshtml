
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}

@model IEnumerable<Brand>
<div class="col-12">

    <div class="card">
        <div class="d-flex ">
            <div class="card-header">
                <h4>Brands</h4>
            </div>
            <div>
                <button class="btn btn-primary mt-3 mr-3"><a asp-action="Create" class="text-white">+ Add brand</a></button>

            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table  v_center" id="sortable-table">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>Brand Name</th>

                            <th>Edit</th>
                            <th>Delete</th>


                        </tr>
                    </thead>
                    <tbody class="ui-sortable">
                        @foreach (var brand in Model)
                        {

                            <tr>

                                <td>
                                    @brand.BrandId
                                </td>
                                <td>@brand.BrandName</td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@brand.BrandId" class="btn btn-primary">Edit</a>
                                </td>
                                <td><a href="#" class="btn btn-light ml-2">Delete</a></td>


                            </tr>
                        }


                    </tbody>
                </table>
                @if (!string.IsNullOrEmpty(ViewBag.throwError))
                {
                    
                <div class="d-flex justify-content-center text-light  align-self-end m-5 p-5 bg-white" style="font-size:30px"><i class="fa fa-inbox " aria-hidden="true"></i><p>@ViewBag.throwError</p></div>
            
                }
            </div>
        </div>
    </div>
</div>


